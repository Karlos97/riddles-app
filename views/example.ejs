<%- include('partials/documentHeader.ejs') %>
    <main class="px-3">
        <div class="w-50 position-absolute top-50 start-50 translate-middle">
            <form action="/check-answer" method="post">
                <div class="mb-4">
                    <label for="question" class="form-label">Question</label>
                    <p>
                        <%= riddle.question %>
                    </p>
                </div>

                <div class="mb-4">
                    <label for="answer" class="form-label">Answer</label>
                    <input type="userAnswer" name="userAnswer" class="form-control" id="userAnswer"
                        placeholder="Type your answer" />
                </div>

                <input type="hidden" value="<%= riddle._id %>" name="riddleId">

                <button type="submit" class="btn btn-light">
                    Check answer! </button>
            </form>
        </div>
    </main>



    <%- include('partials/documentFooter.ejs') %>