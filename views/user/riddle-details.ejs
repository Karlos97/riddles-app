<%- include('../partials/documentHeader.ejs') %>
    <main class="px-3">
        <div class="w-50 position-absolute top-50 start-50 translate-middle">
            <h1>
                Riddle Details
            </h1>

            <div class="list-group history-list">
                <div class="list-group-item list-group-item-action" aria-current="true">
                    <div class="mb-4">
                        <label class="label">Question:</label>
                        <p>
                            <%= riddle.question %>
                        </p>
                    </div>
                    <div class="mb-4">
                        <label class="label">Answer:</label>
                        <p>
                            <%= riddle.answer %>
                        </p>
                    </div>

                    <div class="mb-4">
                        <label class="label">Reward:</label>
                        <p>
                            <%= riddle.reward %>
                        </p>
                    </div>
                    <div class="item-nav">

                        <form action="/user/delete-riddle/:<%- riddle._id %>" method="POST">
                            <a href="/user/edit-riddle/<%- riddle._id %>"
                                class="badge rounded-pill text-bg-primary">Edit</a>
                            <input type="hidden" value="<%= riddle._id %>" name="riddleId">
                            <button class="badge rounded-pill text-bg-danger btn" type="submit">X</button>
                        </form>
                    </div>
                    <small>
                        Last update:
                        <%-new Date(riddle.createdAt).toISOString().split('T')[1].slice(0,8)%>
                            <%-new Date(riddle.createdAt).toISOString().split('T')[0]%>
                    </small>
                </div>
            </div>
            <a class="btn btn-light" href="<%= backPath %>">
                Go Back!
            </a>
        </div>

    </main>

    <%- include('../partials/documentFooter.ejs') %>